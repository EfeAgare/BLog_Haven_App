
  <%= render 'shared/error_messages' %>
  <div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12 image-section">
      <div class="jumbotron jumbotron-fluid" style='background-image: url(https://png.pngtree.com/thumb_back/fw800/back_pic/00/08/57/41562ad4a92b16a.jpg); background-position: center;
  background-repeat: no-repeat;    height: 40vh;
  background-size: cover'>
      </div>
      <div class="user-division">
        <div class="user-profil-part user-left-part">
          <div class="user-image text-center">
            <div class="image-div rounded-circle"
                  style="
  border: 4mm ridge rgba(170, 50, 220, .6) !important; margin: auto; background-image: url(<%= @user.avatar %>); background-size:cover;"
            >
            </div>
          </div>
          <div
            class="user-detail-section1 text-center"
          >
            <% if current_user?(@user) %>
              <%= form_for @user, url: upload_picture_path, method: :patch, remote: true do |f| %>
                <div class="field">
                    <%= f.file_field :avatar, accept: "image/*", class: 'file-input inputfile', id: "file" %>
                    <label for="file" class="btn-block">Change Picture</label>
                  
                  <%= f.submit "Save", class: "btn btn-primary btn-block upload-profile-image" %>
                </div>
              <% end %>
            <% end %>
            <%= render 'follow_form' if logged_in? %>
          </div>
          <div class="row user-detail-row">
            <div class="col-md-12 col-sm-12 user-detail-section2 pull-left">
              <div class="border"></div>
              <div class='user-stats'>
                <%= render 'shared/stats' %>
              </div>
            </div>
          </div>
          <div class="row user-detail-row">
            <div class="col-md-12 col-sm-12 user-detail-section2 pull-left">
              <div class="border"></div>
              <div class='user-stats my-articles'>
                <%= link_to 'My Articles', user_articles_path(@user.id) %>
              </div>
            </div>
          </div>
        </div>
        <div class="profile-right-section user-right-part">
          <div class="profile-header">
            <div
                class="profile-header-section1 pull-left"
              >
              <h1><%= @user.name %></h1>
              <h5>Developer</h5>
            </div>
          </div>
          <div class="col-md-12">
            <div class="row">
              <div class="user-tab">
                <ul class="nav nav-tabs" role="tablist">
                  <li class="nav-item" style="
    width: 40%">
                    <a
                      class="nav-link active"
                      href="#profile"
                      role="tab"
                      data-toggle="tab"
                      ><i class="fas fa-user-circle"></i> User Details</a
                    >
                  </li>
                  <% if current_user?(@user) %>
                    <li class="nav-item" style="
    width: 40%">
                      <a
                      class="nav-link"
                      href="#buzz"
                      role="tab"
                      data-toggle="tab"
                      ><i class="fas fa-info-circle"></i> Update Profile</a
                    >
                    </li>
                  <% end %>
                </ul>
                <!-- Tab panes -->
                <div class="tab-content">
                  <div
                    role="tabpanel"
                    class="tab-pane fade show active"
                    id="profile"
                  >
                    <div class="row">
                      <div class="col-md-2 user-name-label">
                        <label>Name</label>
                      </div>
                      <div class="col-md-6 user-name">
                        <p><%= @user.name %></p>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-md-2 user-email-label">
                        <label>Email</label>
                      </div>
                      <div class="col-md-6 user-email-label">
                        <p> <%= @user.email %></p>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-md-2">
                        <label>Phone Number</label>
                      </div>
                      <div class="col-md-6">
                        <p>08034567895</p>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-md-2">
                        <label>Professsion</label>
                      </div>
                      <div class="col-md-6 user-job-title">
                        <p>Developer</p>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-md-2">
                        <label>Bio</label>
                      </div>
                      <div class="col-md-6 user-job-title">
                        <p>I am the great guy, you Know</p>
                      </div>
                    </div>
                  </div>
                  <div role="tabpanel" class="tab-pane fade" id="buzz">
                    <%= form_tag "#", id: "update", method: "patch", multipart: true do %>
                      <div class="row">
                        <div class="col-md-6">
                          <label>Name</label>
                        </div>
                        <div class="col-md-6">
                          <p><input type="text" name="" id="user-name" value="<%= @user.name %>" placeholder="<%= @user.name %>" class= "form-control input-lg"></p>
                        </div>
                      </div>
                      <div class="row">
                        <div class="col-md-6">
                          <label>Professsion</label>
                        </div>
                        <div class="col-md-6">
                          <p><input type="text" name="" id="user-professsion" class= "form-control input-lg"></p>
                        </div>
                      </div>
                      <div class="row">
                        <div class="col-md-6">
                          <label>Email</label>
                        </div>
                        <div class="col-md-6">
                          <p><input type="text" name="" id="user-email" class= "form-control input-lg" value="<%= @user.email %>" placeholder="<%= @user.email %>"></p>
                        </div>
                      </div>
                      <div class="row">
                        <div class="col-md-6">
                          <label>Bio</label>
                        </div>
                        <div class="col-md-6">
                          <p>
                            <textarea name="" id="user-bio" cols="3" rows="3" class= "form-control input-lg"></textarea>
                          </p>
                        </div>
                      </div>
                    <% end %>
                    <div class="row">
                      <div class="col-md-6">
                        <label></label>
                      </div>
                      <div class="col-md-6">
                        <p> <button class="btn btn-primary btn-block submit-update">Submit</button></p>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
