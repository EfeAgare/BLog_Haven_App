<% provide(:title, "Forgot password") %>
<!DOCTYPE html>
<html>
  <head>
    <meta content="text/html; charset=UTF-8" http-equiv="Content-Type" />
    <link
      href="https://fonts.googleapis.com/css?family=Montserrat:400,700"
      rel="stylesheet"
    />
      <style>
        .survey-response-container {
          display: flex;
          font-family: 'Montserrat', sans-serif;
          flex-direction: column;
          align-items: center;
          background: #f0efef;
          overflow: scroll;
          padding-top: 80px;
          padding-bottom: 90px;
        }
        
        .survey-response-email-card {
          width: 40%;
          background: white;
          padding: 25px;
          margin: 20px auto;
        }
        .survey-response-content {
          border-bottom: 1px solid #f5f5f5;
        }
        
        .vof-email-logo {
          text-align: center;
          margin-top: 4rem;
        }
        
        .survey-response-vof-team {
          margin-top: 40px;
        }

        .submit-text{
          color: white
        }
        
        .recipient-name {
          color: #333e44;
          text-align: center;
          font-size: 1.3em;
          font-family: 'Montserrat', sans-serif;
          font-weight: 700;
          margin: 3rem 0 3rem 0;
        }
        
        .survey-response-text {
          font-size: .9rem;
          width: 70%;
          line-height: 21px;
          color: #4f4f4f;
          text-align: center;
          margin: 0 auto 1rem auto;
        }
        .survey-link {
          text-align: center;
          margin: 28px 0 45px 0;
          color: white;
        }
        .survey-link > .survey-link-text {
          color: white;
        }
        .survey-link-text {
          text-align: center;
          background-color: #3259db;
          margin: 2px auto;
          border-radius: 4px;
          text-decoration: none;
          color: white;
          font-family: Helvetica;
          font-size: 17px;
          line-height: 20px;
          padding: 12px 35px;
        }
        .survey-response-footer {
          text-align: center;
          border-top: 1px solid #f5f5f5;
          padding-top: 40px;
          font-size: .9rem;
          line-height: 21px;
          color: #4f4f4f;
        }
        .support {
          display: block;
          margin: 0.7rem 0 0.5rem 0;
          color: #3259db;
        }
        @media only screen and (min-width: 400px) {
          .survey-response-email-card {
          width: 60%;
          }
        }
      </style>
    </head>
    <body>
      <div class="survey-response-container">
        <div class="survey-response-email-card">
          <div class="survey-response-content">
            <p class="vof-email-logo">
            </p>
            <h2 class="recipient-name">Password Reset</h2>
            <p class="survey-response-text">
              Enter your Email address
            </p>
            
              <%= form_for(:password_reset, url: password_resets_path) do |f| %>
              <p class="survey-response-text">
               <%= f.email_field :email, class: 'form-control', placeholder: 'Enter your email' %>
            </p>
            <p class="survey-link">
              <a href="#" class="survey-link-text"
              > <%= f.submit "Submit", class: 'submit-text' %></a
            >
            </p>
            <% end %>
          </div>
          <div class="survey-response-footer">
            With love from Author's Blog
            </span>
          </div>
        </div>
      </div>
    </body>
  </html>
