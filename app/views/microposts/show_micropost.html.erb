<% if current_user %>
 <div class="microposts-dialog">
    <% if @feed_items.any? %>
      <h3 class='count'>Microposts (<%= @feed_items.count %>)</h3>
      <button class='btn btn-primary btn-lg micropost-create'>Create</button>
      </div>
      <ol class="microposts">
        <%= render @feed_items %>
      </ol>
      <%= will_paginate @feed_items %>
      <% else %>
      <button class='btn btn-primary btn-lg micropost-create'>Create</button>
    <% end %>
  </div>
  <%= render 'microposts/new' %>
<% end %>
 <%= render 'microposts/delete' %>